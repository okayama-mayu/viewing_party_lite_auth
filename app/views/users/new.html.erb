<h2>Register New User</h2>

<%= form_with model: User.new, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_conf, 'Password Confirmation' %>
  <%= f.password_field :password_conf %>

  <%= f.submit 'Register User' %>
<% end %>

